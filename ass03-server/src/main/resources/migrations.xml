<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="simon">
        <createTable tableName="user">
            <column name="id" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="firstname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="flatshareid" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="simon">
    	<renameTable newTableName="users" oldTableName="user"/>
    </changeSet>
    <changeSet id="3" author="felix">
        <createTable tableName="flatshares">
            <column name="id" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="housenumber" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="felix">
        <createTable tableName="articles">
            <column name="id" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="purchaser" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="5" author="simon">
		<createTable tableName="consumers">
			<column name="userid" type="varchar(64)">
				<constraints foreignKeyName="user_id_fk" references="users(id)" nullable="false"/>
			</column>
			<column name="articleid" type="varchar(64)">
				<constraints foreignKeyName="article_id_fk" references="articles(id)" nullable="false"/>
			</column>
		</createTable>
    </changeSet>
</databaseChangeLog>